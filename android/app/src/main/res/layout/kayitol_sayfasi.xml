<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_Kayit_Soyisim"
        android:background="@drawable/border"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/sp_Kayit_sehirler"
        android:layout_alignStart="@+id/sp_Kayit_sehirler"
        android:layout_alignTop="@+id/textView8"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_Kayit_Sifre"
        android:background="@drawable/border"
        android:inputType="textPassword"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@+id/textView"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_Kayit_kullaniciadi"
        android:background="@drawable/border"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/et_Kayit_Sifre"
        android:layout_alignStart="@+id/et_Kayit_Sifre"
        android:layout_alignTop="@+id/textView2"
        android:paddingLeft="10dp" />

    <TextView
        android:text="ŞİFRE                  :"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="18dp"
        android:background="@drawable/txtarkaplan"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:paddingLeft="7dp"
        android:paddingTop="5dp" />

    <TextView
        android:text="İSİM                    :"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/textView7"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"

        android:background="@drawable/txtarkaplan"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:layout_alignBaseline="@+id/et_Kayit_isim"
        android:layout_alignBottom="@+id/et_Kayit_isim"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_Kayit_isim"
        android:background="@drawable/border"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/et_Kayit_Sifre"
        android:layout_alignLeft="@+id/et_Kayit_Sifre"
        android:layout_alignStart="@+id/et_Kayit_Sifre"
        android:paddingLeft="10dp" />

    <TextView
        android:text="SOY İSİM            :"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"

        android:background="@drawable/txtarkaplan"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/et_Kayit_isim"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_Kayit_sehirler"
        android:backgroundTint="#FFFFFF"
        android:elevation="0dp"
        android:contextClickable="false"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignLeft="@+id/sp_Kayit_ilceler"
        android:layout_alignStart="@+id/sp_Kayit_ilceler"
        android:background="#FFFFFF"
        android:layout_alignTop="@+id/textView9"
        android:dropDownSelector="@color/common_signin_btn_dark_text_default"
        android:layout_alignRight="@+id/et_Kayit_isim"
        android:layout_alignEnd="@+id/et_Kayit_isim" />

    <TextView
        android:text="İlçe                     :"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:background="@drawable/txtarkaplan"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:layout_alignTop="@+id/sp_Kayit_ilceler"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:text="ŞEHİR                  :"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/textView9"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:background="@drawable/txtarkaplan"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_Kayit_telefon"
        android:background="@drawable/border"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/et_Kayit_isim"
        android:layout_alignStart="@+id/et_Kayit_isim"
        android:layout_alignTop="@+id/textView11"
        android:paddingLeft="10dp" />

    <TextView
        android:text="TELEFON            :"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/textView11"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:background="@drawable/txtarkaplan"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:text="YAŞ                     :"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/textView12"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:background="@drawable/txtarkaplan"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_Kayit_Yas"
        android:background="@drawable/border"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignLeft="@+id/et_Kayit_telefon"
        android:layout_alignStart="@+id/et_Kayit_telefon"
        android:layout_alignTop="@+id/textView12" />

    <Button
        android:text="Kaydı Tamamla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Kayit_Kayditamamla"
        android:layout_below="@+id/textView12"
        android:layout_alignRight="@+id/et_Kayit_Yas"
        android:layout_alignEnd="@+id/et_Kayit_Yas"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="KAYIT OL"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView20"
        android:background="@drawable/txtarkaplan"
        android:textStyle="normal|bold"
        android:textSize="45sp"
        android:textColor="#000000"
        android:paddingLeft="100dp" />

    <TextView
        android:text="KULLANICI ADI  :"
        android:layout_width="150dp"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:background="@drawable/txtarkaplan"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView20"
        android:layout_toLeftOf="@+id/et_Kayit_kullaniciadi"
        android:layout_toStartOf="@+id/et_Kayit_kullaniciadi"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        />

    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/sp_Kayit_ilceler"
        android:drawSelectorOnTop="true"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/sp_Kayit_sehirler"
        android:layout_alignLeft="@+id/et_Kayit_telefon"
        android:layout_alignStart="@+id/et_Kayit_telefon"
        android:background="#FFFFFF"
        android:dropDownSelector="@color/common_signin_btn_dark_text_default"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/et_Kayit_telefon"
        android:layout_alignEnd="@+id/et_Kayit_telefon"
        android:paddingLeft="10dp" />


</RelativeLayout>
