<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lst_bildirim"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_bildirim_anasayfadon"
        android:background="@drawable/backgr" />

    <TextView
        android:text="BİLDİRİMLER"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView31"
        android:background="@drawable/txtarkaplan"
        android:textStyle="normal|bold"
        android:textSize="45sp"
        android:textColor="#000000"
        android:paddingLeft="80dp" />

    <Button
        android:text="Ana Sayfaya Dön"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_bildirim_anasayfadon"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_below="@+id/textView31"
        android:layout_centerHorizontal="true" />
</RelativeLayout>