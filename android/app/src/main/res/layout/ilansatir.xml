<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/txtarkaplan"
    >

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_satir_isim"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:paddingLeft="10dp"
        android:textStyle="normal|bold"
        android:layout_marginTop="15dp"
        android:textSize="15sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tel"
            android:id="@+id/ilan_satir_imgtel"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_satir_tel"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:textStyle="normal|bold"
            android:textSize="15sp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_satir_konum"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="6dp"
        android:paddingLeft="10dp"
        android:textStyle="normal|bold"
        android:textSize="15sp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_satir_aciklama"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="6dp"
        android:paddingLeft="10dp"
        android:textStyle="normal|bold"
        android:textSize="15sp" />


</LinearLayout>