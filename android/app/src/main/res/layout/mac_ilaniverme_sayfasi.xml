<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sonmacialnver"
        android:id="@+id/imageView5"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Kayıt olurken kullandığınız İl ve İlçenize göre İlan  Verilecektir"
        android:id="@+id/textView29"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="18sp"
        android:background="@drawable/txtarkaplan"
        android:layout_height="50dp"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="50dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_width="425dp"
        android:paddingRight="2dp"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:paddingTop="2dp" />

    <Button
        android:text="Maç İlanları"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_width="190dp"
        android:background="@android:drawable/btn_default"
        android:textColor="#000000"
        android:layout_below="@+id/imageView5"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:text="Ana sayfaya geri dön"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_width="190dp"
        android:background="@android:drawable/btn_default"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Maç Tarihi "
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/textView16"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="16sp"
        android:background="@drawable/txtarkaplan"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/textView29"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginTop="80dp" />

    <TextView
        android:text="Maç Saati"
        android:id="@+id/textView14"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="16sp"
        android:background="@drawable/txtarkaplan"
        android:textColor="#000000"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:layout_width="150dp"
        android:layout_below="@+id/textView29"
        android:layout_alignLeft="@+id/textView29"
        android:layout_alignStart="@+id/textView29"
        android:layout_marginTop="16dp"
        android:textIsSelectable="false" />

    <TextView
        android:text="HALISAHA ADI "
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/textView15"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="18sp"
        android:background="@drawable/txtarkaplan"
        android:textColor="#000000"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/btn_macilanver_tarih"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="Mevki veya ek açıklama belirtiniz"
        android:id="@+id/textView28"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_width="150dp"
        android:textSize="18sp"
        android:background="@drawable/txtarkaplan"
        android:textColor="#000000"
        android:layout_height="80dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/et_ekstraozellik"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <EditText
        android:ems="10"
        android:id="@+id/et_ilanver_halisaha"
        android:singleLine="false"
        android:background="@drawable/border"
        android:inputType="textPostalAddress"
        android:selectAllOnFocus="false"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_toRightOf="@+id/button"
        android:layout_alignBottom="@+id/textView15"
        android:paddingLeft="20dp"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignRight="@+id/btn_macilanver_tarih"
        android:layout_alignEnd="@+id/btn_macilanver_tarih" />

    <EditText
        android:layout_height="80dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_ekstraozellik"
        android:background="@drawable/border"
        android:textSize="13sp"
        android:layout_width="200dp"
        android:layout_below="@+id/et_ilanver_halisaha"
        android:layout_alignRight="@+id/et_ilanver_halisaha"
        android:layout_alignEnd="@+id/et_ilanver_halisaha"
        android:layout_marginTop="19dp"
        android:layout_alignLeft="@+id/et_ilanver_halisaha"
        android:layout_alignStart="@+id/et_ilanver_halisaha"
        android:paddingLeft="20dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/sp_ilanver_saat"
        android:layout_width="200dp"
        style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
        android:background="@drawable/border"
        android:backgroundTint="@color/common_signin_btn_dark_text_default"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignLeft="@+id/btn_macilanver_tarih"
        android:layout_alignStart="@+id/btn_macilanver_tarih"
        android:layout_alignRight="@+id/textView29"
        android:layout_alignEnd="@+id/textView29" />

    <ImageView
        app:srcCompat="@drawable/warning"
        android:id="@+id/imageView9"
        android:adjustViewBounds="true"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView29"
        android:layout_alignLeft="@+id/textView29"
        android:layout_alignStart="@+id/textView29" />

    <Button
        android:text="Tarih Seçiniz"
        android:layout_height="wrap_content"
        android:id="@+id/btn_macilanver_tarih"
        style="@android:style/Widget.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:visibility="visible"
        android:background="@drawable/border"
        android:layout_width="200dp"
        android:textSize="20sp"
        android:layout_alignTop="@+id/textView16"
        android:layout_toRightOf="@+id/button"
        android:layout_alignRight="@+id/textView29"
        android:layout_alignEnd="@+id/textView29" />

    <Button
        android:text="İlan Ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ilanverme_ilanver"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        style="@android:style/Widget.Button"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_alignRight="@+id/et_ekstraozellik"
        android:layout_alignEnd="@+id/et_ekstraozellik" />

    <DatePicker
        android:id="@+id/datePicker2"
        android:background="@color/common_signin_btn_dark_text_default"
        android:visibility="invisible"
        android:headerBackground="#33CC00"
        android:contextClickable="false"
        android:headerMonthTextAppearance="@style/TextAppearance.AppCompat"
        android:layout_width="270dp"

        android:layout_height="300dp"
        android:layout_alignBottom="@+id/btn_tarih_tamam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView29">

    </DatePicker>

    <Button
        android:text="seç"
        android:id="@+id/btn_tarih_tamam"
        android:visibility="invisible"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/btn_ilanverme_ilanver"
        android:layout_alignBottom="@+id/btn_ilanverme_ilanver"
        android:layout_alignRight="@+id/datePicker2"
        android:layout_alignEnd="@+id/datePicker2" />


</RelativeLayout>
