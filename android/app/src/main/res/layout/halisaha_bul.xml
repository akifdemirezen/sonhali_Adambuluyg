<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr">

    <Spinner
        android:layout_width="200dp"
        android:id="@+id/spn_halisaha_il"
        android:background="@drawable/border"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView33"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignBottom="@+id/textView33" />

    <TextView
        android:text="Halı Sahaları Bul"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView32"
        android:background="@drawable/txtarkaplan"
        android:layout_height="60dp"
        android:textSize="45sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="35dp" />

    <TextView
        android:text="Tüm Halısahaları İletişim Bilgileri ve Adresleriyle görebilirsiniz"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="27dp"
        android:id="@+id/textView35"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:background="@drawable/txtarkaplan"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:paddingLeft="25dp"
        android:paddingTop="8dp"
        android:layout_below="@+id/textView32"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="İLÇE                   :"
        android:layout_width="150dp"
        android:layout_marginTop="63dp"
        android:id="@+id/textView34"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:background="@drawable/txtarkaplan"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:paddingLeft="7dp"
        android:paddingTop="10dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView33"
        android:layout_alignLeft="@+id/textView33"
        android:layout_alignStart="@+id/textView33" />

    <TextView
        android:text="şehir                :"
        android:layout_width="150dp"
        android:layout_marginTop="63dp"
        android:id="@+id/textView33"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:background="@drawable/txtarkaplan"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:paddingLeft="7dp"
        android:paddingTop="10dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/textView35"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="200dp"
        android:id="@+id/spn_halisaha_ilce"
        android:background="@drawable/border"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView34"
        android:layout_alignLeft="@+id/spn_halisaha_il"
        android:layout_alignStart="@+id/spn_halisaha_il"
        android:layout_alignBottom="@+id/textView34" />

    <Button
        android:text="Halısahaları Göster"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/btn_halisaha_goster"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="14sp"
        android:editable="false"
        android:textColor="#000000"
        android:autoText="false"
        android:textAllCaps="true"
        android:enabled="true"
        android:textStyle="normal|bold"
        android:layout_below="@+id/spn_halisaha_ilce"
        android:layout_alignLeft="@+id/spn_halisaha_ilce"
        android:layout_alignStart="@+id/spn_halisaha_ilce"
        android:layout_alignRight="@+id/spn_halisaha_ilce"
        android:layout_alignEnd="@+id/spn_halisaha_ilce" />
</RelativeLayout>