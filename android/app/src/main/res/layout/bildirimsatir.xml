<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/txtarkaplan">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_bildirim_satir_kimden"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tel"
            android:id="@+id/bildirimsatir_tel_img"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_bildirim_satir_tel"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:textStyle="normal|bold"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:id="@+id/txt_bildirim_satir_tarih"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_bildirim_satir_il_ilce"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="6dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="15sp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_bildirim_satir_aciklama"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="6dp"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:textColor="#000000" />


</LinearLayout>