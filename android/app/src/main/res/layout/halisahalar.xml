<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr">

    <TextView
        android:text="Halı Sahalar"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView36"
        android:background="@drawable/txtarkaplan"
        android:layout_height="60dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#000000"
        android:textSize="45sp"
        android:textIsSelectable="false"
        android:textAllCaps="true"
        android:textStyle="normal|bold"
        android:paddingLeft="45dp" />

    <Button
        android:text="AnaSayfaya Dön"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_halisahalar_anasayfayadon"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView36"
        android:layout_toStartOf="@+id/btn_halisahalar_anasayfayadon"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_halisahalar_anasayfayadon"
        android:background="@drawable/txtarkaplan"
        android:id="@+id/lst_halisahalar" />

    <TextView
        android:text="TELEFON NUMARASINA TIKLAYARAK İSTEDİĞİNİZ HALISAHAYI ARAYABİLİRSİNİZ"
        android:layout_width="wrap_content"
        android:id="@+id/textView37"
        android:background="@drawable/txtarkaplan"
        android:layout_height="40dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView36"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:paddingLeft="7dp" />
</RelativeLayout>